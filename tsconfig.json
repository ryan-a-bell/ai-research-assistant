{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "ES2016",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "node_modules/zotero-types",
    "src",
  ],
  "exclude": [
    "builds",
    "addon",
    "src/models/agents",
    "src/models/chains",
    "src/models/tools",
    "src/models/vectorstore",
    "src/models/legacyAssistant.ts",
    "src/models/utils/lcParsers.ts",
    "src/models/utils/memory.ts"
  ]
}